<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="esigPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>br.com.saymon.model.Cargo</class>
        <class>br.com.saymon.model.CargoVencimentos</class>
        <class>br.com.saymon.model.Pessoa</class>
        <class>br.com.saymon.model.PessoaSalarioConsolidado</class>
        <class>br.com.saymon.model.Vencimentos</class>
        <class>br.com.saymon.model.Usuario</class>
        
        <properties>
        	<!-- Configurações do banco de dados -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://postgres:5432/esig_test"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>
            
            <!-- Configurações do hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            
            <!-- Evitar o uso do banco H2 do wildfly -->
            <property name="wildfly.jpa.allowdefaultdatasourceuse" value="false" />
        </properties>
    </persistence-unit>
</persistence>